<%= content_for(:title, t('.title')) %>
<div class="bg-[#f5eace]">
<% if logged_in? %>
  <%= render 'shared/header' %>
<% else %>
  <%= render 'shared/before_login_header' %>
<% end %>
  <div>
    <div class="container mx-auto">
      <h1 class="secondary-title"><%= t('.title') %></h1>
      <div class="mx-10">
        <%= form_with model: @contact, local: true, url: confirm_contacts_path, data: { turbo: false } do |f| %>
          <div class="form-group">
            <%= f.label :name, Contact.human_attribute_name(:name), class:"font-bold text-xl" %><br>
            <%= f.text_field :name, class: "form-control rounded focus:ring-gray-500 focus:border-gray-500 mb-5 w-4/5", placeholder: 'eri' %>
          </div>
          <div class="form-group">
            <%= f.label :email, Contact.human_attribute_name(:email), class:"font-bold text-xl" %><br>
            <%= f.text_field :email, class: "form-control rounded focus:ring-gray-500 focus:border-gray-500 w-4/5 mb-5", placeholder: "sample@gmail.com" %>
          </div>
          <div class="form-group">
            <%= f.label :content, Contact.human_attribute_name(:content), class:"font-bold text-xl" %><br>
            <%= f.text_area :content, class: "form-control rounded focus:ring-gray-500 focus:border-gray-500 w-4/5", placeholder: 'お問い合わせ内容をお書き下さい', rows: 5 %>
          </div>
          <div class="text-end">
            <%= f.submit t('defaults.registration'), class: "bg-green-500 hover:bg-green-600 transition-all duration-300 text-white rounded py-3 px-20 font-bold mt-10 text-xl mb-20 cursor-pointer" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>