<div class="bg-[#f5eace]">
<%= render 'shared/header' %>
  <div>
    <div class="container mx-auto">
      <h1 class="secondary-title"><%= t('.title') %></h1>
      <div class="grid grid-cols-1 gap-10 lg:grid-cols-3 md:grid-cols-2 auto-rows-auto place-content-center place-items-center">
        <% if current_user.id == @user.id %>
          <% if @worry_items.present? %>
            <%= render @worry_items %>
          <% else %>
            <p><%= t('.no_result') %></p>
          <% end %>
        <% else %>
          <% if @worry_items_for_user.present? %>
            <%= render @worry_items_for_user %>
          <% else %>
            <p><%= t('.no_result') %></p>
          <% end %>
        <% end %>
      </div>
      <% if current_user.id == @user.id %>
        <% if @worry_items.present? %>
          <%= paginate @worry_items %>
        <% end %>
      <% else %>
        <% if @worry_items_for_user.present? %>
          <%= paginate @worry_items_for_user %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>