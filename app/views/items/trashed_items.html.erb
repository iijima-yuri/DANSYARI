<% set_meta_tags title: t('.title') %>
<div class="bg-[#f5eace] grow">
<%= render 'shared/header' %>
  <div>
    <div class="container mx-auto">
      <h1 class="secondary-title"><%= t('.title') %></h1>
      <div class="grid grid-cols-1 gap-10 lg:grid-cols-3 md:grid-cols-2 auto-rows-auto place-content-center place-items-center">
        <% if current_user.id == @user.id %>
          <% if @trashed_items.present? %>
            <%= render @trashed_items %>
          <% else %>
            <p><%= t('.no_result') %></p>
          <% end %>
        <% else %>
          <% if @trashed_items_for_user.present? %>
            <%= render @trashed_items_for_user %>
          <% else %>
            <p><%= t('.no_result') %></p>
          <% end %>
        <% end %>
      </div>
      <% if current_user.id == @user.id %>
        <% if @trashed_items.present? %>
          <%= paginate @trashed_items %>
        <% end %>
      <% else %>
        <% if @trashed_items_for_user.present? %>
          <%= paginate @trashed_items_for_user %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>