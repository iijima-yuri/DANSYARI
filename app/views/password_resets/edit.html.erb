<% set_meta_tags title: t('.title') %>
<div class="bg-[#f5eace] grow">
<%= render 'shared/before_login_header' %>
  <div class="container mx-auto">
    <h1 class="secondary-title"><%= t('.title') %></h1>
    <div class="mx-10">
      <p class="mb-10">新しいパスワードを入力してください</p>
      <ul>
      <%= form_with model: @user, url: password_reset_path(@token) do |f| %>
        <li ><%= f.label :password %><br>
        <%= f.password_field :password, class: "w-11/12 md:w-6/12", placeholder: "パスワード" %></li>

        <li class="pt-2"><%= f.label :password_confirmation %><br>
        <%= f.password_field :password_confirmation, class: "w-11/12 md:w-6/12", placeholder: "パスワード（確認）"%></li>

        <%= f.submit t('defaults.reset'), class: "bg-green-500 hover:bg-green-600 transition-all duration-300 text-white rounded px-4 py-2 px-20 font-bold text-xl mt-5 text-center" %>
      <% end %>
      </ul>
    </div>
  </div>
</div>