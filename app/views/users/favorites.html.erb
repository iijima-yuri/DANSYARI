<% content_for(:title, t('.title')) %>
<div class="bg-[#f5eace]">
<%= render 'shared/header' %>
  <div>
    <div class="container mx-auto">
      <h1 class="secondary-title"><%= t('.title') %></h1>
      <div class="grid grid-cols-1 gap-10 lg:grid-cols-4 md:grid-cols-2 auto-rows-auto place-content-center place-items-center">
        <% if @favorite_items.present? %>
          <%= render partial: 'favorite', collection: @favorite_items, as: :item %>
        <% else %>
          <p><%= t('.no_result') %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>