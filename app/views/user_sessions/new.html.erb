<% content_for(:title, t('.title')) %>
<div class="object-cover min-h-screen bg-center bg-cover bg-login-page-bg">
  <header class="container p-4 mx-auto text-end">
    <nav>
      <div class="md:text-end">
        <%= link_to new_user_path, class:"hover:text-lime-800 transition-all duration-300 space-x-12 font-bold" do %>
          <i class="fa-solid fa-user"></i>
          <%= t('users.new.title') %>
        <% end %>
      </div>
    </nav>
  </header>
  <div>
    <div class="text-center">
      <h1 class="mt-20 mb-10 text-3xl font-bold sm:text-3xl md:text-4xl lg:text-6xl"><%= t('.title') %></h1>
      <div>
        <%= form_with model: @user, local: true do |f| %>
          <div class="form-graup">
            <i class="fa-solid fa-envelope"></i>
            <%= f.label :email, User.human_attribute_name(:email), class:"font-bold text-xl" %><br>
            <%= f.email_field :email, placeholder:"sample@example.com", class: "form-control rounded focus:ring-gray-500 focus:border-gray-500 mb-5 w-2/5" %>
          </div>
          <div class="form-graup">
            <i class="fa-solid fa-lock"></i>
            <%= f.label :password, User.human_attribute_name(:password), class:"font-bold text-xl " %><br>
            <%= f.password_field :password, placeholder:"password", class: "form-control rounded focus:ring-gray-500 focus:border-gray-500 w-2/5 mb-5" %>
            <%# <p><%= t('.password_forget')<%= link_to t('.password_forget_this'), "#", class:"underline hover:text-white" %>
          </div>
          <%= f.submit t('defaults.login'), class: "bg-green-500 hover:bg-green-600 transition-all duration-300 text-white rounded px-10 py-3 px-20 font-bold mt-10 text-xl"%>
        <% end %>
      </div>
      <%# <div class="mt-20 text-center"> %>
        <%# <%= link_to t('.google_login'), "#", class: "hover:text-white h-10 text-2xl font-bold" %>
      <%# </div>  %>
    </div>
  </div>
</div>

